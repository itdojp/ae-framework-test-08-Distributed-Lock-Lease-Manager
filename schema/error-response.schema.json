{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://itdojp.github.io/ae-framework-test-08/schema/error-response.schema.json",
  "title": "ErrorResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["code", "message", "status", "server_time"],
  "properties": {
    "code": { "type": "string" },
    "message": { "type": "string" },
    "status": { "type": "integer", "minimum": 400, "maximum": 599 },
    "server_time": { "type": "string", "format": "date-time" }
  }
}
